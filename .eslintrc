{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "import/imports-first": 2,
        "indent": [ 2, 4, { "SwitchCase": 1 } ],
        "linebreak-style": [ 2, "unix" ],
        "no-unused-vars": [2, { "args": "none" }],
        "quotes": [ 2, "single" ],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "semi": [ 2, "always" ]
    },
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "react"
    ]
}
